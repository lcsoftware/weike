<div class="row">
    <form role="form">
        <div class="form-group">
            <div class="col-sm-2">
                <div class="row">
                    <div class="col-sm-12" style="margin-bottom:0.5em;">
                        <select class="form-control" ng-model="conditionData.MicYear" ng-options="m.MicYear for m in AcademicYears">
                            <option value="">-- 请选择学年--</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12" style="margin-bottom:0.5em;">
                        <select class="form-control" ng-model="conditionData.GradeCode" ng-options="m.GradeName for m in GradeCodes">
                            <option value="">-- 请选择年级--</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12" style="margin-bottom:0.5em;">
                        <select class="form-control" ng-model="conditionData.TestType" ng-options="m.name for m in ExamMethods">
                            <option value="">-- 请选择考试类型 --</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12" style="margin-bottom:0.5em;">
                        <select class="form-control" ng-model="conditionData.TestLogin" ng-options="m.TestLoginNo for m in TestLogins">
                            <option value="">-- 请选择考试号 --</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12" style="margin-bottom:0.5em;">
                        <select class="form-control" ng-model="conditionData.OutItem" ng-options="m.name for m in OutItems">
                            <option value="">-- 请选择输出 --</option>
                        </select>
                    </div>
                </div>

            </div>

            <div class="col-sm-3">
                <div class="checkbox" ng-show="GradeClasses.length > 0">
                    <label ng-repeat="gradeClass in GradeClasses" style="width:8em;">
                        <input type="checkbox" checklist-value="gradeClass" checklist-model="classChecks"> {{conditionData.GradeCode.GradeBriefName + '(' + gradeClass.ClassNo.substr(2,2)+ ')班'}}
                    </label>
                </div>
            </div>
            <div class="col-sm-1">
                <label ng-repeat="item in GradeCourses">
                    <input type="checkbox" checklist-value="item" checklist-model="courseChecks"> {{item.FullName}}
                </label>
            </div>
            <div class="col-sm-3">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="checkbox" ng-show="Settings.length > 0">
                            <label ng-repeat="item in Settings">
                                <input type="checkbox" checklist-value="item" checklist-model="SettingChecks"> {{item.name}}
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 input-group">
                        <span class="input-group-addon">等第A</span>
                        <input type="number" class="form-control" ng-model="ValueA1">
                        <span class="input-group-addon">高于或等于</span>
                        <input type="number" class="form-control" ng-model="ValueA2">
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 input-group">
                        <span class="input-group-addon">等第B</span>
                        <input type="number" class="form-control" ng-model="ValueB1">
                        <span class="input-group-addon">高于或等于</span>
                        <input type="number" class="form-control" ng-model="ValueB2">
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 input-group">
                        <span class="input-group-addon">等第C</span>
                        <input type="number" class="form-control" ng-model="ValueC1">
                        <span class="input-group-addon">高于或等于</span>
                        <input type="number" class="form-control" ng-model="ValueC2">
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 input-group">
                        <span class="input-group-addon">等第D</span>
                        <input type="number" class="form-control" ng-model="ValueD1">
                        <span class="input-group-addon">高于或等于</span>
                        <input type="number" class="form-control" ng-model="ValueD2">
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 input-group">
                        <span class="input-group-addon">等第E</span>
                        <input type="number" class="form-control" ng-model="ValueE1">
                        <span class="input-group-addon">高于或等于</span>
                        <input type="number" class="form-control" ng-model="ValueE2">
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" ng-true-value="1" ng-false-value="0" ng-model="lastLevel"> 将最后一档中的及格者提高一档次
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-2">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" ng-true-value="1" ng-false-value="0" ng-model="lastLevel">仅统计在籍生
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <button type="button" class="btn btn-primary" ng-click="stat();"><span class="glyphicon glyphicon-ok"></span>统 计</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div> 