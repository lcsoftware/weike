<!DOCTYPE html>
<html lang="en" ng-app="app">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title ng-bind="title">@(PageData["title"] ?? "AngularJS SPA Template for Visual Studio")</title>
    <meta name="description" content="@PageData["description"]">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    @Styles.Render("~/content/css/app")
</head>
<body>
    <!--[if lt IE 9]>
        <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
    <!-- Static navbar -->
    <div class="navbar navbar-default navbar-static-top" role="navigation" ng-if=" !layout ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Project Name</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown" ng-repeat="firstMenu in menus.children">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            {{firstMenu.Description}}<span class="caret" ng-if="firstMenu.children.length > 0"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li ng-repeat="secondMenu in firstMenu.children">
                                <a ng-if="secondMenu.children.length>0" class="dropdown-header" style="font-weight:bold;font-size:14px;">{{secondMenu.Description}}</a>
                                <a ng-if="secondMenu.children.length==0" ui-sref="{{secondMenu.FuncName}}">{{secondMenu.Description}}</a>
                                <a ng-repeat="thirdMenu in secondMenu.children" ng-if="thirdMenu.children.length==0" ui-sref="{{thirdMenu.FuncName}}">{{thirdMenu.Description}}</a>
                            </li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{name}}<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a ui-sref="nChangePwd">修改口令</a></li>
                            <li><a style="cursor:pointer" ng-click="logout();">退出系统</a></li>
                        </ul>
                    </li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </div>

    <div id="ui-view" class="container" ui-view data-tmpl-url="@Request.RequestContext.RouteData.DataTokens["templateUrl"]">
        @RenderBody()
    </div>

    @Scripts.Render("~/js/vendor")
    @Scripts.Render("~/js/app")

</body>
</html>