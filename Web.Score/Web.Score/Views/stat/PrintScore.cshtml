<div class="row">
    <div class="col-sm-3">
        <form role="form">
            <div class="form-group">
                <select class="form-control" ng-model="conditionData.MicYear" ng-options="m.MicYear for m in AcademicYears">
                    <option value="">-- 请选择学年--</option>
                </select>
            </div>
            <div class="form-group">
                <select class="form-control" ng-model="conditionData.Semester" ng-options="m.Name for m in Semesters">
                    <option value="">-- 请选择学期--</option>
                </select>
            </div> 
            <div class="form-group">
                <select class="form-control" ng-model="conditionData.PrintMethod" ng-options="m.Name for m in PrintMethods">
                    <option value="">-- 请选择打印方式--</option>
                </select>
            </div> 
            <div class="form-group">
                <select class="form-control" ng-model="conditionData.GradeCode" ng-options="m.GradeName for m in GradeCodes">
                    <option value="">-- 请选择年级--</option>
                </select>
            </div>
            <div class="form-group">
                <select class="form-control" ng-model="conditionData.GradeClass" ng-options="(conditionData.GradeCode.GradeBriefName + '(' + m.ClassNo.substr(2) + ')班') for m in GradeClasses">
                    <option value="">-- 请选择班级--</option>
                </select>
            </div> 
            <div class="checkbox" ng-if="Students.length > 0">
                <label ng-repeat="student in Students">
                    <input type="checkbox" checklist-value="student" checklist-model="studentChecks"> {{student.StdName}}
                </label>
            </div> 
            <div class="col-sm-3">
                <select class="form-control" ng-model="conditionData.TestType" ng-options="m.Name for m in TestTypes">
                    <option value="">-- 请选择考试类型 --</option>
                </select>
            </div>
            <div class="col-sm-3">
                <select class="form-control" ng-model="conditionData.TestLogin" ng-options="m.TestLoginNo for m in TestLogins">
                    <option value="">-- 请选择考试号 --</option>
                </select>
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-primary pull-right" ng-click="stat();"><span class="glyphicon glyphicon-ok"></span>统 计</button>
            </div>
        </form>
    </div>
    <div class="col-sm-9">
        <div class="row">
            <div class="col-sm-12">
                <div class="row" ng-class="{'hideTag': !haveStat}">
                    <div class="col-sm-12" style="text-align:center;font-size:2em;">{{conditionData.Student.StdName}}{{conditionData.GradeCourse.FullName}}年级排名趋势图</div>
                </div>
                <div class="row">
                    <div class="col-sm-10 col-sm-offset-1">
                        <div id="main1" style="height:300px;width:100%"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-12" style="text-align:center;font-size:2em;">
                {{conditionData.Student.StdName}}语数外成绩报表
            </div>
        </div>
        <table class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <td rowspan="2" style="text-align:center;padding-top:1.5em">考试号</td>
                    <td rowspan="2" style="text-align:center;padding-top:1.5em;">考试时间</td>
                    <td colspan="5" style="text-align:center">语文</td>
                    <td colspan="5" style="text-align:center">数学</td>
                    <td colspan="5" style="text-align:center">外语</td>
                </tr>
                <tr>
                    <td>成绩</td>
                    <td>标准</td>
                    <td>班分</td>
                    <td>年分</td>
                    <td>班标准</td>
                    <td>成绩</td>
                    <td>标准</td>
                    <td>班分</td>
                    <td>年分</td>
                    <td>班标准</td>
                    <td>成绩</td>
                    <td>标准</td>
                    <td>班分</td>
                    <td>年分</td>
                    <td>班标准</td>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in data">
                    <td>{{item.testno}}</td>
                    <td>{{item.Date1.substr(0, 10)}}</td>
                    <td>{{item.YW1}}</td>
                    <td>{{item.YW2}}</td>
                    <td>{{item.YW3}}</td>
                    <td>{{item.YW4}}</td>
                    <td>{{item.YW5}}</td>
                    <td>{{item.SX1}}</td>
                    <td>{{item.SX2}}</td>
                    <td>{{item.SX3}}</td>
                    <td>{{item.SX4}}</td>
                    <td>{{item.SX5}}</td>
                    <td>{{item.WY1}}</td>
                    <td>{{item.WY2}}</td>
                    <td>{{item.WY3}}</td>
                    <td>{{item.WY4}}</td>
                    <td>{{item.WY5}}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<script type="text/javascript">
    require.config({
        packages: [
            { name: 'echarts', location: '/content/charts/echarts', main: 'echarts' },
            { name: 'zrender', location: '/content/charts/zrender', main: 'zrender' }
        ]
    });
</script>
