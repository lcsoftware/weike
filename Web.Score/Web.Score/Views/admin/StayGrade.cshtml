<div class="row">
    <div class="col-sm-6" style="overflow-y: auto;max-height:45em;">
        <div ui-tree id="tree-root">
            <ol ui-tree-nodes="" ng-model="grades">
                <li ng-repeat="grade in grades" ui-tree-node nodrag>
                    <div ui-tree-handle class="tree-node tree-node-content">
                        <a class="btn btn-success btn-xs" nodrag ng-click="toggle(this)"><span class="glyphicon" ng-class="{'glyphicon-chevron-right': collapsed, 'glyphicon-chevron-down': !collapsed}"></span></a>
                        {{grade.Name}}
                    </div>
                    <ol ui-tree-nodes="" ng-model="grade.Children" ng-class="{hidden: collapsed}">
                        <li ng-repeat="gradeClass in grade.Children" ui-tree-node collapsed="true">
                            <div ui-tree-handle class="tree-node tree-node-content" ng-class="{'selected':item.Selected}">
                                <a class="btn btn-success btn-xs" nodrag ng-click="toggle(this)" ng-class="{hidden:gradeClass.Children.length == 0}"><span class="glyphicon" ng-class="{'glyphicon-chevron-right': collapsed, 'glyphicon-chevron-down': !collapsed}"></span></a>
                                {{gradeClass.Name}}
                            </div>
                            <ol ui-tree-nodes="" ng-model="gradeClass.Children" ng-class="{hidden: collapsed}">
                                <li  ui-tree-node>
                                    <div ui-tree-handle class="tree-node tree-node-content" ng-class="{'selected':user.Selected}">
                                        <table class="table table-striped table-bordered" style="width:100%">
                                            <thead>
                                                <tr>
                                                    <th style="width:20%">序号</th>
                                                    <th style="width:20%">学号</th>
                                                    <th style="width:20%">姓名</th>
                                                    <th style="width:20%">性别</th>
                                                    <th style="width:20%"></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="student in gradeClass.Children">
                                                 <td>{{student.no}}</td>
                                                 <td>{{student.systemid}}</td>
                                                 <td>{{student.name}}</td>
                                                 <td>{{student.sex}}</td>
                                                 <td>
                                                     <a class="btn btn-danger btn-xs pull-right " nodrag ng-click="keepStudent(student);">留级<span class="glyphicon glyphicon-chevron-right"></span></a>
                                                 </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </li>
                            </ol>
                        </li>
                    </ol>
                </li>
            </ol>
        </div>
    </div>
    <div class="col-sm-6" style="overflow-y: auto;max-height:45em;">
        <table class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr style="background-color:#808080">
                    <th style="width:25%;text-align:center">留级生</th>
                </tr>
            </thead>
            <tr ng-repeat="student in keeps">
                <td>
                    {{student.name}}
                </td>
            </tr>
        </table>
    </div>
</div>