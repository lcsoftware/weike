<div class="row">
    <div class="col-sm-6" style="overflow-y: auto;max-height:45em;">
        <div class="row">
            <div class="col-sm-12">
                <div class="tree-border">
                    <h3>Light Tree</h3>
                    <div>Selected: {{node2.label?node2.label:"N/A"}}</div>
                    <treecontrol class="tree-light" tree-model="treedata" options="treeOptions" expanded-nodes="expandedNodes" on-selection="gradeSelected(node)">
                        {{node.label}} ({{node.id}})
                    </treecontrol>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="row">
                    <div>
                        {{clsName}}({{numberOfPeople}})
                    </div>
                </div>
                <div class="row">
                    <div>
                        <table class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr style="background-color:#808080">
                                    <th style="width:25%;text-align:center">学号</th>
                                    <th style="width:25%;text-align:center">姓名</th>
                                    <th style="width:25%;text-align:center">性别</th>
                                    <th style="width:25%;text-align:center">序号</th>
                                </tr>
                            </thead>
                            <tr ng-repeat="func in students">
                                <td>
                                    {{func.FuncId}}
                                </td>
                                <td>
                                    {{func.Description}}
                                </td>
                                <td>
                                    {{func.FuncTypeName}}
                                </td>
                                <td>
                                    {{func.FuncTypeName}}
                                </td>
                            </tr>
                        </table>
                    </div>
                </div> 
            </div>
        </div>
    </div>
    <div class="col-sm-6" style="overflow-y: auto;max-height:45em;">
        <table class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr style="background-color:#808080">
                    <th style="width:25%;text-align:center">留级生</th>
                </tr>
            </thead>
            <tr ng-repeat="func in userFuncs">
                <td>
                    {{func.FuncId}}
                </td>
            </tr>
        </table>
    </div>
</div>