<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <div class="row">
            <div class="form-group" style="margin-bottom:3em;">
                <label class="col-sm-3 control-label">请选择用户(组)</label>
                <div class="col-sm-9">
                    <select class="form-control" ng-model="selectedUserGroup" ng-options="m.Name for m in userGroups" ng-change="userGroupChanged(selectedUserGroup);">
                        <option value="">-- 请选择用户(组) --</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12" style="overflow-y: auto;max-height:42em;margin-top:2em;">
                <table class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr style="background-color:#808080">
                            <th style="width:25%;text-align:center">功能编号</th>
                            <th style="width:50%;text-align:center">功能描述</th>
                            <th style="width:25%;text-align:center">功能类型</th>
                        </tr>
                    </thead>
                    <tr ng-repeat="func in userFuncs">
                        <td>
                           {{func.FuncId}}  
                        </td> 
                        <td>
                           {{func.Description}}  
                        </td>
                        <td>
                            {{func.FuncTypeName}}
                        </td>
                    </tr>
                </table>
            </div>
        </div>

    </div>
</div>