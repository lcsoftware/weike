@using IES.SYS.Model;
@using IES.Cache;
@using IES.Security;
@using IES.SYS.Model;
@using IES.G2S.SYS.BLL;
@using IES.Service;
 @{
    List<Menu> LeftMenu = AuService.Menu_Left_List("B2", 2); 
} 
<div class="main_all main_course">
    <!--首页左边模块开始-->
    <div class="side_left">
        <!--用户信息开始-->
        <div class="user">
            <img src=@UserService.CurrentUserIMG width="110" height="100" />
            <a class="teacher_name" href="#"> @UserService.CurrentUser.UserName 	</a>
            <a class="switch_btn" href="#">这里是教师端<i class="icon icon_arrow"></i></a>
            <span class="icon_24 icon_user"></span>
        </div>
        <!--用户信息结束-->
        <!--侧边导航开始-->
        <div class="side_box">
            <ul class="side_nav"> 
                @foreach (var menu in LeftMenu)
                { 
                    <li id="@menu.MenuID" ui-sref-active="active"><a ui-sref="@menu.URL">@menu.Title</a></li>
                } 
            </ul>
        </div>
        <!--侧边导航结束-->
    </div>
    <!--首页左边模块结束-->
    <!--右侧主题内容开始-->
    <div class="main_content">
        <!--右侧头部公告开始-->
        <div class="right_header">
            <p class="freshman"><i class="icon icon_question"></i><a href="#" target="_blank">新手向导</a></p>
            <div class="notice_box">
                <ul class="notice_list">
                    <li style="display:block;"><i class="icon notice_icon"></i>上海卓越《课程中心》4.0版本正式上线，特此公告，此次版本将全面兼容MOOCs课程，功能与界面更友好</li>
                    <li><i class="icon notice_icon"></i>线，特此公告，此次版本将全面兼容MOOCs课程，功能与界面更友好</li>
                </ul>
                <div class="notice_btn">
                    <a class="icon prev_btn" href="javascript:;"></a>
                    <a class="icon next_btn" href="javascript:;"></a>
                </div>
            </div>
        </div>
        <!--右侧头部公告结束-->
        <div class="coursesite_box"> 
            <div class="exercise_nav">
                <ul class="exercise_nav_list">
                    <li ng-repeat="course in courses" ng-class="{active:courseSelection==course.OCID}"><a class="first_nav" style="cursor:pointer" ng-click="courseChanged(chapter);" ng-bind="course.Name"></a></li>
                </ul>
            </div>
            <div ui-view></div>
        </div>

    </div>
    <!--右侧主题内容结束-->

</div>
<a class="icon_fold" href="javascript:;"></a>
