

<div class="paper_content">
    <div class="text_box" style="color:#F00;">
        <editor editor-id="editorInput" editor-text="editorText"></editor>
    </div>
    <a class="add_attach" dialog-show dialog-id="eIesUploader"><em><i class="icon"></i></em><span>添加附件</span></a>
    <attach-list attachments="attachmentList"></attach-list>
    <p class="no_rank">
        <input type="checkbox" ng-model="model.exercisecommon.exercise.IsRand" ng-checked="model.exercisecommon.exercise.IsRand==true" ng-change="isRandChange(model.exercisecommon.exercise.IsRand)">选项乱序<span>（需选择一个选项作为正确答案）</span>
    </p>
    <ul class="answer_list">
        <li ng-class="{active:item.IsCorrect}" ng-repeat="item in model.exercisechoicelist">
            <div class="default">
                <em style="cursor:pointer;"><i class="icon" ng-model="item.IsCorrect" ng-click="isCorrectChange(item)"></i></em>
                <a ng-click="del(item)">x</a>
                <input type="text" ng-model="item.Conten"> 
            </div>
            @*<div class="text_box" style="color:#F00;">这里是富文本框这里是富文本框</div>*@
        </li>

    </ul>
    <a class="add_attach" ng-click="AddAnswer()"><em><i class="icon"></i></em><span>添加选项</span></a>
    <div class="text_box" style="color:#F00; margin-top:20px;">
        <input type="hidden" name="editorAnalysis" id="editorAnalysis" ng-model="editorAnalysisText" ng-value="editorAnalysisText">
        <iframe src="/Frameworks/eWebEditor/ewebeditor.htm?id=editorAnalysis&style=coolblue"
                frameborder="0" scrolling="no" width="880" height="300" style="display: block;"></iframe>     
    </div>
</div>
<ies-file-uploader id="eIesUploader" style="display:none" upload-url="/DataProvider/FileUpload.ashx?from=2"></ies-file-uploader>