                                        <div class="operation_btn first_operation" ng-show="Chapter.ShowOperation==true">
                                            <a ng-click="Chapter_Move(Chapter,'1')" href="javascript:void(0)"></a>
                                            <a ng-click="Chapter_Move(Chapter,'2')" href="javascript:void(0)"></a>
                                            <a ng-click="Chapter_Del(Chapter)" href="javascript:void(0)"></a>
                                        </div>
                                    </div>
                                    <div class="chapter_btn">
                                        <a class="j_brief" ng-click="ChapterDetail(Chapter)" href="javascript:void(0)" role="button" data-backdrop="static" data-toggle="modal"><i class="icon_mooc icon_brief"></i></a>
                                        <a class="j_data" href="javascript:void(0)"></a>
